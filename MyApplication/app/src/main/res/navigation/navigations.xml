<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigations"
    app:startDestination="@id/Home">

    <fragment
        android:id="@+id/Description"
        android:name="com.example.myapplication.Description"
        android:label="fragment_kala_description"
        tools:layout="@layout/fragment_kala_description" >
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_Description_to_Home"
            app:destination="@id/Home" />
    </fragment>
    <fragment
        android:id="@+id/AboutUs"
        android:name="com.example.myapplication.AboutUs"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" >
        <action
            android:id="@+id/action_AboutUs_to_Home"
            app:destination="@id/Home" />
    </fragment>
    <fragment
        android:id="@+id/Home"
        android:name="com.example.myapplication.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_Home_to_Description"
            app:destination="@id/Description" />
        <action
            android:id="@+id/action_Home_to_AboutUs"
            app:destination="@id/AboutUs" />
    </fragment>
</navigation>